<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/lib_download_theme_blue_99" />
            <corners android:radius="@dimen/lib_download_sp_btn_radius" />
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/lib_download_theme_main_50" />
            <corners android:radius="@dimen/lib_download_sp_btn_radius" />
        </shape>
    </item>
    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/lib_download_theme_main" />
            <corners android:radius="@dimen/lib_download_sp_btn_radius" />
        </shape>
    </item>

</selector>